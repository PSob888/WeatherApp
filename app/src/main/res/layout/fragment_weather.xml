<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentWeather">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="86dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textCityName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:text="@string/City" />

                <ImageButton
                    android:id="@+id/imageButtonAddToFav"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/outline_favorite_border_36"
                    app:tint="@color/additional1"
                    android:layout_weight="1"
                    android:contentDescription="AddToFav" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textHour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:textSize="48sp"
                android:gravity="center"
                android:text="@string/Hour" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textLastUpdated"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="@string/LastUpdated" />

                <TextView
                    android:id="@+id/textLastUpdated2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/outline_favorite_border_36"
                    app:tint="@color/additional1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/LastUpdated" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/texttile"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Temperature" />

                <TextView
                    android:id="@+id/textTemperature2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/additional1"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Temperature" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/texttile"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textClouds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Clouds" />

                <TextView
                    android:id="@+id/textClouds2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/additional1"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Clouds" />

                <ImageButton
                    android:id="@+id/imageTypeOfClouds"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    app:srcCompat="@drawable/cloud_solid_48"
                    app:tint="@color/clouds"
                    android:layout_weight="1"
                    android:contentDescription="TypeOfClouds" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/texttile"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textMoist"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Moist" />

                <TextView
                    android:id="@+id/textMoist2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/additional1"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Moist" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/texttile"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textWind"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Wind" />

                <TextView
                    android:id="@+id/textWind2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/additional1"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Wind" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="128dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/texttile"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/textPressure"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Pressure" />

                <TextView
                    android:id="@+id/textPressure2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/additional1"
                    android:textSize="28sp"
                    android:gravity="center"
                    android:text="@string/Pressure" />
            </LinearLayout>

        </TableRow>

    </LinearLayout>

</FrameLayout>